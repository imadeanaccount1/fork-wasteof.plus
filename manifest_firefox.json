{
    "name": "wasteof.plus",
    "manifest_version": 3,
    "version": "0.1.0",
    "host_permissions": [
      "https://wasteof.money/*",
      "https://wasteof.money/*/*",
      "https://wasteof.money/",
      "*://*.wasteof.money/*"
    ],
    "description": "adds helpful features to wasteof.money",
    "permissions": ["scripting", "storage", "tabs", "webNavigation"],
    "optional_permissions": ["notifications"],

    "background": {
      "scripts": ["background/firefox_background.js"]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "wasteofplus@imadeanaccount.github.io",
        "strict_min_version": "112.0"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.wasteof.money/*"],
        "js": ["content-scripts/content_script_firefox.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "assets/icons/icon16.png",     
      "32": "assets/icons/icon32.png",   
      "48": "assets/icons/icon48.png", 
      "128": "assets/icons/icon128.png"      

    },
    "action": {
      "default_popup": "popups/popup.html"
    },
    "web_accessible_resources": [{
        "matches": ["*://*.wasteof.money/*"],
        "resources": [
            "node_modules/socket.io-client/dist/socket.io.js",
            "addons/*/*.js",
            "addons/*/templates/*.html",
            "addons/*/addon.json",
            "addons/*/lib/*.js",
            "utils.js",
            "content-scripts/lib/routeInjectedScript.js"
        ]
      }]
  }
